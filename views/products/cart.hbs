<div class="hero-wrap hero-bread" style="background-image: url('images/bg_1.jpg');">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> <span>Cart</span></p>
				<h1 class="mb-0 bread">My Cart</h1>
			</div>
		</div>
	</div>
</div>

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-3 col-lg-3 cart-wrap ftco-animate">
    				<div class="cart-total mb-3">
    					<h3>Cart Totals</h3>
    					<p class="d-flex">
    						<span>Delivery</span>
    						<span>$0.00</span>
    					</p>
    					<p class="d-flex">
    						<span>Discount</span>
    						<span>$0.00</span>
    					</p>
    					<hr>
    					<p class="d-flex total-price">
    						<span>Total</span>
    						<span>$ {{cartData.totalPrice}}</span>
    					</p>
    				</div>
    				<p><a href="/checkout" class="btn btn-primary py-3 px-4">Checkout</a></p>
    			</div>
			<div class="col-md-9 ftco-animate">
				<div class="cart-list">
					
					<table class="table cart-table table-hover">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>#</th>
								<th>Image</th>
								<th>Product name</th>
								<th>Price</th>
								<th>Quantity</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							{{#if cartData.selectedProduct}}
								{{#each cartData.selectedProduct as | val index |}}
								
								<!-- Start TR-->
								<tr class="text-center">
									<td class="product-remove">{{index}}</td>

									<td class="image-prod">
										<div class="img" style="background-image:url(images/product-3.jpg);"></div>
									</td>

									<td class="product-name">
										<h3>{{val.name}}</h3>
									</td>

									<td class="price">${{val.price}}</td>

									<td class="quantity text-center">
										<a href="/decreaseProduct/{{index}}" class="mr-4"><i class="fa fa-minus-square"></i></a>
										{{val.quantity}}
										<a href="/increaseProduct/{{index}}" class="ml-4"><i class="fa fa-plus-square"></i></a>
									</td>
									<td class="product-remove">
										<a href="/deleteProduct/{{index}}" class="btn-danger">
											<i class="fa fa-trash"></i>
										</a>
									</td>
								</tr><!-- END TR-->
								{{/each}}
							{{else}}
							<tr class="text-center">
								<td colspan="6" class="p-4 color-red">
									<b>there is no data</b> <a href="/"> Go To Shopping</a>
								</td>
							</tr>
							{{/if}}
						</tbody>
						
						<tfoot class="thead-primary">
							<tr class="text-center">
								<th>Total Price</th>
								<th colspan="5">$  {{cartData.totalPrice}}</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
		
	</div>
</section>

<script>
	$(document).ready(function () {

		var quantitiy = 0;
		$('.quantity-right-plus').click(function (e) {

			// Stop acting like a button
			e.preventDefault();
			// Get the field name
			var quantity = parseInt($('#quantity').val());

			// If is not undefined

			$('#quantity').val(quantity + 1);


			// Increment

		});

		$('.quantity-left-minus').click(function (e) {
			// Stop acting like a button
			e.preventDefault();
			// Get the field name
			var quantity = parseInt($('#quantity').val());

			// If is not undefined

			// Increment
			if (quantity > 0) {
				$('#quantity').val(quantity - 1);
			}
		});

	});
</script>